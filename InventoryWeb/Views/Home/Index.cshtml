@model InventoryWeb.Models.InventoryViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].ItemId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].ItemCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InventoryItems[0].Active)
            </th>
            <th>
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InventoryItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Active)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.ItemId">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
